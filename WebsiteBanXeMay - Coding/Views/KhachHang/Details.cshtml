@model WebsiteBanXeMay___Coding.Models.KhachHang

@{
    ViewData["Title"] = "Chi Tiết Khách Hàng";
}

<h1>@ViewData["Title"]</h1>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>Họ và Tên</th>
            <td>@Model.HoTen</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Số Điện Thoại</th>
            <td>@Model.SoDienThoai</td>
        </tr>
        <tr>
            <th>Địa Chỉ</th>
            <td>@Model.DiaChi</td>
        </tr>
        <tr>
            <th>Ngày Tạo</th>
            <td>@Model.NgayTao?.ToString("dd/MM/yyyy")</td>
        </tr>
    </table>
</div>

<a href="@Url.Action("Index", "KhachHang")" class="btn btn-secondary">Quay Lại</a>
