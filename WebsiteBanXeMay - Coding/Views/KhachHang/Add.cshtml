@using System.Security.Claims
@model WebsiteBanXeMay___Coding.Models.KhachHang

@{
    ViewData["Title"] = "Thêm Mới Khách Hàng";
}

<h1>@ViewData["Title"]</h1>

<h4>Khách Hàng</h4>
<hr />

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="HoTen">Họ và Tên</label>
        <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model?.HoTen" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model?.Email" required />
    </div>

    <div class="form-group">
        <label for="SoDienThoai">Số Điện Thoại</label>
        <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai" value="@Model?.SoDienThoai" required />
    </div>

    <div class="form-group">
        <label for="DiaChi">Địa Chỉ</label>
        <input type="text" class="form-control" id="DiaChi" name="DiaChi" value="@Model?.DiaChi" required />
    </div>

    <!-- Nếu cần lấy UserId từ session hoặc cách khác, ví dụ như từ User hiện tại -->
    <input type="hidden" name="UserId" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />

    <button type="submit" class="btn btn-primary">Thêm Mới</button>
</form>
