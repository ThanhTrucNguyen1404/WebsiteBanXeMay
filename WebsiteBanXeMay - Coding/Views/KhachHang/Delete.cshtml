@model WebsiteBanXeMay___Coding.Models.KhachHang

@{
    ViewData["Title"] = "Xóa Khách Hàng";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete the customer?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Họ và Tên</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Số Điện Thoại</dt>
        <dd class="col-sm-10">@Model.SoDienThoai</dd>

        <dt class="col-sm-2">Địa Chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>

        <dt class="col-sm-2">Ngày Tạo</dt>
        <dd class="col-sm-10">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Index", "KhachHang")" class="btn btn-secondary">Hủy</a>
</form>
