@model IEnumerable<WebsiteBanXeMay___Coding.Models.KhachHang>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Add", "KhachHang")" class="btn btn-primary">Thêm Mới Khách Hàng</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Họ và Tên</th>
            <th>Email</th>
            <th>Số Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Ngày Tạo</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.Email</td>
                <td>@item.SoDienThoai</td>
                <td>@item.DiaChi</td>
                <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", "KhachHang", new { id = item.Id })" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="@Url.Action("Delete", "KhachHang", new { id = item.Id })" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
