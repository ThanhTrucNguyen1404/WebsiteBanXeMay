@using System.Security.Claims
@model WebsiteBanXeMay___Coding.Models.KhachHang

@{
    ViewData["Title"] = "Chỉnh Sửa Khách Hàng";
}

<h1>@ViewData["Title"]</h1>

<h4>Khách Hàng</h4>
<hr />

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="HoTen">Họ và Tên</label>
        <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>

    <div class="form-group">
        <label for="SoDienThoai">Số Điện Thoại</label>
        <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai" value="@Model.SoDienThoai" />
    </div>

    <div class="form-group">
        <label for="DiaChi">Địa Chỉ</label>
        <input type="text" class="form-control" id="DiaChi" name="DiaChi" value="@Model.DiaChi" />
    </div>

    <!-- Add hidden field for UserId -->
    <input type="hidden" name="UserId" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />

    <button type="submit" class="btn btn-primary">Cập Nhật</button>
</form>

<!-- Display validation errors if there are any -->
@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">
        @error.ErrorMessage
    </div>
}
