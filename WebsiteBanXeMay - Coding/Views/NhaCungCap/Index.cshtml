@model IEnumerable<WebsiteBanXeMay___Coding.Models.NhaCungCap>

@{
    ViewData["Title"] = "Danh sách Nhà Cung Cấp";
}

<h2 class="text-center text-primary">Danh Sách Nhà Cung Cấp</h2>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a asp-action="Add" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Thêm Nhà Cung Cấp</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên Nhà Cung Cấp</th>
            <th>Địa Chỉ</th>
            <th>Điện Thoại</th>
            <th>Email</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TenNhaCungCap</td>
                <td>@item.DiaChi</td>
                <td>@item.SoDienThoai</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
