@model WebsiteBanXeMay___Coding.Models.NhaCungCap

@{
    ViewData["Title"] = "Xóa Nhà Cung Cấp";
}

<h2 class="text-center text-danger">Xóa Nhà Cung Cấp</h2>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h5>Bạn có chắc muốn xóa nhà cung cấp này?</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Tên Nhà Cung Cấp:</dt>
                    <dd class="col-sm-8">@Model.TenNhaCungCap</dd>

                    <dt class="col-sm-4">Địa Chỉ:</dt>
                    <dd class="col-sm-8">@Model.DiaChi</dd>

                    <dt class="col-sm-4">Số Điện Thoại:</dt>
                    <dd class="col-sm-8">@Model.SoDienThoai</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Mô Tả:</dt>
                    <dd class="col-sm-8">@Model.MoTa</dd>
                </dl>

                <form asp-action="DeleteConfirmed" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger w-100"><i class="fas fa-trash-alt"></i> Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary w-100 mt-2"><i class="fas fa-arrow-left"></i> Quay Lại</a>
                </form>
            </div>
        </div>
    </div>
</div>
