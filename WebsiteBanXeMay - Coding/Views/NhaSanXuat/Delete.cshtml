@model WebsiteBanXeMay___Coding.Models.NhaSanXuat

@{
    ViewData["Title"] = "Xóa Nhà Sản Xuất";
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn có chắc chắn muốn xóa nhà sản xuất này?</h3>
<div>
    <h4>Thông tin nhà sản xuất</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.TenNhaSanXuat</dd>

        <dt class="col-sm-2">Địa Chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>

        <dt class="col-sm-2">Số Điện Thoại</dt>
        <dd class="col-sm-10">@Model.SoDienThoai</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
