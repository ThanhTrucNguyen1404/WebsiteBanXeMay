@model WebsiteBanXeMay___Coding.Models.PhieuNhap

@{
    ViewData["Title"] = "Xóa Phiếu Nhập";
}

<h2>Bạn có chắc chắn muốn xóa phiếu nhập này?</h2>

<table class="table">
    <tr>
        <th>ID:</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Nhà Cung Cấp:</th>
        <td>@Model.NhaCungCap?.TenNhaCungCap</td>
    </tr>
    <tr>
        <th>Nhân Viên:</th>
        <td>@Model.NhanVien?.FullName</td> <!-- ✅ Fix lỗi -->
    </tr>
    <tr>
        <th>Ngày Nhập:</th>
        <td>@Model.NgayNhap.ToString("dd/MM/yyyy")</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑 Xóa</button>
    <a class="btn btn-secondary" asp-action="Index">🔙 Quay Lại</a>
</form>
