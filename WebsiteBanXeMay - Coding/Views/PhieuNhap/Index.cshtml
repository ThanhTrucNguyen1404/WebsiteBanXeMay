@model IEnumerable<WebsiteBanXeMay___Coding.Models.PhieuNhap>

@{
    ViewData["Title"] = "Danh Sách Phiếu Nhập";
}

<h2 class="text-center">📦 Danh Sách Phiếu Nhập</h2>

<div class="d-flex justify-content-between align-items-center my-3">
    <!-- Ô tìm kiếm -->
    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="🔍 Tìm kiếm..." value="@Context.Request.Query["search"]" />
        <button type="submit" class="btn btn-primary">🔍 Tìm</button>
    </form>

    <!-- Nút thêm phiếu nhập -->
    <a class="btn btn-success" asp-action="Add">➕ Thêm Phiếu Nhập</a>
</div>

<!-- Kiểm tra danh sách có dữ liệu hay không -->
@if (Model.Any())
{
    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nhà Cung Cấp</th>
                <th>Nhân Viên</th>
                <th>Ngày Nhập</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@(item.NhaCungCap?.TenNhaCungCap ?? "Chưa có")</td>
                    <td>@(item.NhanVien?.FullName ?? "Chưa có")</td> <!-- ✅ Fix lỗi -->
                    <td>@item.NgayNhap.ToString("dd/MM/yyyy")</td>
                    <td>@item.TongTien.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td> <!-- ✅ Hiển thị tiền VNĐ -->
                    <td>
                        <span class="badge @(item.TrangThai ? "bg-success" : "bg-danger")">
                            @(item.TrangThai ? "✔ Hoạt động" : "❌ Đã Hủy")
                        </span>
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">👁 Xem</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">✏ Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa phiếu nhập này?');">🗑 Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center">
        🚫 Không có phiếu nhập nào trong hệ thống.
    </div>
}
