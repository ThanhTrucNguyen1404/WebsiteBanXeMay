@model WebsiteBanXeMay___Coding.Models.PhieuNhap

@{
    ViewData["Title"] = "Chi Tiết Phiếu Nhập";
}

<h2>Chi Tiết Phiếu Nhập</h2>

<table class="table">
    <tr>
        <th>ID:</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Nhà Cung Cấp:</th>
        <td>@Model.NhaCungCap?.TenNhaCungCap</td>
    </tr>
    <tr>
        <th>Nhân Viên:</th>
        <td>@Model.NhanVien?.FullName</td> <!-- ✅ Fix lỗi -->
    </tr>
    <tr>
        <th>Ngày Nhập:</th>
        <td>@Model.NgayNhap.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Tổng Tiền:</th>
        <td>@Model.TongTien.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td> <!-- ✅ Hiển thị tiền VNĐ -->
    </tr>
    <tr>
        <th>Trạng Thái:</th>
        <td>
            @if (Model.TrangThai)
            {
                <span class="badge bg-success">✔ Hợp lệ</span>
            }
            else
            {
                <span class="badge bg-danger">❌ Đã Hủy</span>
            }
        </td>
    </tr>
</table>

<a class="btn btn-secondary" asp-action="Index">🔙 Quay Lại</a>
