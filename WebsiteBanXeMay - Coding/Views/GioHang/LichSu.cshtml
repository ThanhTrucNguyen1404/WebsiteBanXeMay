@model List<WebsiteBanXeMay___Coding.Models.GioHangItem>

@{
    ViewData["Title"] = "Lịch Sử Mua Hàng";
}

<h2>Lịch Sử Mua Hàng</h2>

@if (Model.Count == 0)
{
    <p>Bạn chưa có lịch sử mua hàng.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th>Ngày thanh toán</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@item.Quantity</td>
                    <td>@item.ThanhTien.ToString("C2")</td>
                    <td>@item.NgayThanhToan?.ToString("dd/MM/yyyy")</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
