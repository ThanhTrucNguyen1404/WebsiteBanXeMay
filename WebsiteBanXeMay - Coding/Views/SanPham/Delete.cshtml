@model WebsiteBanXeMay___Coding.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2 class="text-danger text-center"><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa sản phẩm</h2>

<div class="card shadow-lg p-4 mt-3">
    <div class="row">
        <!-- Cột hình ảnh -->
        <div class="col-md-4 text-center">
            <div class="border p-2 rounded bg-light">
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <img src="@Model.HinhAnh" class="img-thumbnail shadow-lg" alt="Ảnh sản phẩm" style="max-width: 100%; height: auto;" />
                }
                else
                {
                    <p class="text-muted">Chưa có ảnh</p>
                }
            </div>
        </div>

        <!-- Cột thông tin sản phẩm -->
        <div class="col-md-8">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th class="bg-light text-end" style="width: 30%;">Tên sản phẩm</th>
                        <td>@Model.TenSanPham</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Loại sản phẩm</th>
                        <td>@Model.LoaiSanPham?.TenLoai</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Nhà sản xuất</th>
                        <td>@Model.NhaSanXuat?.TenNhaSanXuat</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Nhà cung cấp</th>
                        <td>@Model.NhaCungCap?.TenNhaCungCap</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Giá bán</th>
                        <td><strong class="text-danger">@Model.GiaBan.ToString("N0") VNĐ</strong></td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Số lượng tồn kho</th>
                        <td>@Model.SoLuongTonKho</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Nút xác nhận xóa -->
    <div class="text-center mt-4">
        <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            <i class="fas fa-trash-alt"></i> Xóa sản phẩm
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="fas fa-arrow-left"></i> Hủy</a>
    </div>
</div>

<!-- 🔹 Modal Xác Nhận Xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel"><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fs-5">Bạn có chắc chắn muốn xóa sản phẩm <strong class="text-danger">"@Model.TenSanPham"</strong> không?</p>
                <p class="text-danger">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg"><i class="fas fa-check"></i> Xác nhận</button>
                </form>
                <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal"><i class="fas fa-times"></i> Hủy</button>
            </div>
        </div>
    </div>
</div>
