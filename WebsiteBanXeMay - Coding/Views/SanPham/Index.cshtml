@model IEnumerable<WebsiteBanXeMay___Coding.Models.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2 class="text-center mt-3">🛍️ Danh sách sản phẩm</h2>

<!-- Thanh tìm kiếm & sắp xếp -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex">
        <input type="text" id="searchBox" class="form-control" placeholder="Tìm kiếm sản phẩm..." />
        <button class="btn btn-primary ms-2" onclick="searchProducts()">
            <i class="fas fa-search"></i> Tìm kiếm
        </button>
    </div>

    <div>
        <select id="sortOrder" class="form-select" onchange="sortProducts()">
            <option value="default">Sắp xếp theo</option>
            <option value="asc">Giá: Thấp → Cao</option>
            <option value="desc">Giá: Cao → Thấp</option>
            <option value="name">Tên sản phẩm</option>
        </select>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="text-end mb-3">
        <a asp-action="Add" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        <strong>Không có sản phẩm nào trong hệ thống.</strong>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4" id="productList">
        @foreach (var item in Model)
        {
            <div class="col product-item" data-name="@item.TenSanPham" data-price="@item.GiaBan">
                <div class="card shadow-sm h-100 border-0">
                    <div class="position-relative">
                        <img src="@(!string.IsNullOrEmpty(item.HinhAnh) ? item.HinhAnh : "/Images/no-image.png")"
                             class="card-img-top" alt="@item.TenSanPham"
                             style="height: 200px; object-fit: cover;">
                        <span class="badge @(item.TrangThai ? "bg-success" : "bg-danger") position-absolute top-0 end-0 m-2">
                            @(item.TrangThai ? "Đang bán" : "Ngừng bán")
                        </span>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">@item.TenSanPham</h5>
                        <p class="card-text text-muted">
                            <small>📂 Loại: @item.LoaiSanPham?.TenLoai</small><br>
                            <small>🏭 Nhà sản xuất: @item.NhaSanXuat?.TenNhaSanXuat</small><br>
                            <small>🚚 Nhà cung cấp: @item.NhaCungCap?.TenNhaCungCap</small><br>
                            <small class="fw-bold @(item.SoLuongTonKho > 0 ? "text-success" : "text-danger")">
                                📦 Tồn kho: @item.SoLuongTonKho chiếc
                            </small>
                        </p>
                        <h5 class="fw-bold text-danger">💰 @item.GiaBan.ToString("N0") VNĐ</h5>
                    </div>

                    <div class="card-footer bg-white text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-info-circle"></i> Chi tiết
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"
                               onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này không?');">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        }
                        else if (User.IsInRole("NhanVien"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                        }
                        else if (User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-primary btn-sm add-to-cart" data-id="@item.Id" @(item.SoLuongTonKho > 0 ? "" : "disabled")>
                                <i class="fas fa-cart-plus"></i> Mua ngay
                            </button>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập để mua
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        function searchProducts() {
            var query = $("#searchBox").val().toLowerCase();
            $(".product-item").each(function () {
                var productName = $(this).data("name").toLowerCase();
                if (productName.includes(query)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        }

        function sortProducts() {
            var sortOrder = $("#sortOrder").val();
            var products = $(".product-item").get();

            products.sort(function (a, b) {
                var priceA = parseFloat($(a).data("price"));
                var priceB = parseFloat($(b).data("price"));
                var nameA = $(a).data("name").toLowerCase();
                var nameB = $(b).data("name").toLowerCase();

                if (sortOrder === "asc") {
                    return priceA - priceB;
                } else if (sortOrder === "desc") {
                    return priceB - priceA;
                } else if (sortOrder === "name") {
                    return nameA.localeCompare(nameB);
                }
                return 0;
            });

            $("#productList").append(products);
        }

        $(document).ready(function () {
            $(".add-to-cart").click(function () {
                var productId = $(this).data("id");

                $.ajax({
                    url: "/GioHang/AddToCart",
                    type: "POST",
                    data: { productId: productId, quantity: 1 },
                    success: function () {
                        alert("Sản phẩm đã được thêm vào giỏ hàng!");
                        window.location.href = "/GioHang/Index";
                    },
                    error: function () {
                        alert("Có lỗi xảy ra. Vui lòng thử lại!");
                    }
                });
            });
        });
    </script>
}
