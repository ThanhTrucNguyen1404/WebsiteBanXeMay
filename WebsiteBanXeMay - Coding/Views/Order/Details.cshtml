@model WebsiteBanXeMay___Coding.Models.Order

<h2>Chi tiết đơn hàng</h2>
<table class="table">
    <tr>
        <th>Mã đơn hàng:</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Ngày đặt hàng:</th>
        <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
    </tr>
    <tr>
        <th>Tổng giá trị:</th>
        <td>@Model.TotalPrice.ToString("C")</td>
    </tr>
    <tr>
        <th>Địa chỉ giao hàng:</th>
        <td>@Model.ShippingAddress</td>
    </tr>
    <tr>
        <th>Ghi chú:</th>
        <td>@Model.Notes</td>
    </tr>
</table>

<h3>Chi tiết sản phẩm</h3>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.OrderId</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
    