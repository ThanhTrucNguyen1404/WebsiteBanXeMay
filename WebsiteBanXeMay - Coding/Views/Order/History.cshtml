@model List<WebsiteBanXeMay___Coding.Models.Order>

<h2>Lịch sử đơn hàng</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Địa chỉ giao hàng</th>
                <th>nơi giao hàng</th>
                <th>Ghi chú</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalPrice.ToString("N0") VNĐ</td>
                    <td>@order.ShippingAddress</td>
                    <td>@order.Notes</td>
                    <td>
                        <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-primary btn-sm">
                            Xem chi tiết
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
