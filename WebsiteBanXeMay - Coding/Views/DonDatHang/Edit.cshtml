@model WebsiteBanXeMay___Coding.Models.DonDatHang

@{
    ViewData["Title"] = "Chỉnh Sửa Đơn Hàng";
}

<h2>Chỉnh Sửa Đơn Hàng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DonDatHangId" />

    <div class="form-group">
        <label>Khách Hàng</label>
        <select asp-for="KhachHangId" asp-items="ViewBag.KhachHangList" class="form-control">
            <option value="">-- Chọn khách hàng --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Ngày Đặt</label>
        <input asp-for="NgayDat" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tổng Tiền</label>
        <input asp-for="TongTien" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng Thái</label>
        <select asp-for="TrangThai" class="form-control">
            <option value="Chờ xử lý">Chờ xử lý</option>
            <option value="Đang giao">Đang giao</option>
            <option value="Hoàn thành">Hoàn thành</option>
            <option value="Đã hủy">Đã hủy</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Cập Nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
