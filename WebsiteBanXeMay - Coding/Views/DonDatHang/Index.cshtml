@model IEnumerable<WebsiteBanXeMay___Coding.Models.DonDatHang>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" href="@Url.Action("Add", "DonDatHang")">Thêm đơn hàng</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donDatHang in Model)
        {
            <tr>
                <td>@donDatHang.DonDatHangId</td>
                <td>@donDatHang.KhachHang.HoTen</td>
                <td>@donDatHang.NgayDat.ToString("dd/MM/yyyy")</td>
                <td>@donDatHang.TongTien.ToString("C")</td>
                <td>@donDatHang.TrangThai</td>
                <td>
                    <a href="@Url.Action("Details", "DonDatHang", new { id = donDatHang.DonDatHangId })" class="btn btn-info">Xem chi tiết</a>
                    <a href="@Url.Action("Edit", "DonDatHang", new { id = donDatHang.DonDatHangId })" class="btn btn-warning">Chỉnh sửa</a>
                    <a href="@Url.Action("Delete", "DonDatHang", new { id = donDatHang.DonDatHangId })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này không?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
