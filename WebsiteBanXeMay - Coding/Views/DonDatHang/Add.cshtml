@model WebsiteBanXeMay___Coding.Models.DonDatHang

@{
    ViewData["Title"] = "Thêm đơn hàng";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="KhachHangId">Khách hàng</label>
        <select asp-for="KhachHangId" class="form-control" asp-items="ViewBag.KhachHangList">
            <option value="">-- Chọn khách hàng --</option>
        </select>
        <span asp-validation-for="KhachHangId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NgayDat">Ngày đặt</label>
        <input asp-for="NgayDat" class="form-control" type="text" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly />
        <span asp-validation-for="NgayDat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TongTien">Tổng tiền</label>
        <input asp-for="TongTien" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="TongTien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TrangThai">Trạng thái</label>
        <select asp-for="TrangThai" class="form-control">
            <option value="Chờ xác nhận">Chờ xác nhận</option>
            <option value="Đang xử lý">Đang xử lý</option>
            <option value="Đã hoàn thành">Đã hoàn thành</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm đơn hàng</button>
        <a href="@Url.Action("Index", "DonDatHang")" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
