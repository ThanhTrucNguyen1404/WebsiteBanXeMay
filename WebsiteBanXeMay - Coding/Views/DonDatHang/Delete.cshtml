@model WebsiteBanXeMay___Coding.Models.DonDatHang

@{
    ViewData["Title"] = "Xóa Đơn Hàng";
}

<h2>Bạn có chắc chắn muốn xóa đơn hàng này?</h2>

<table class="table">
    <tr><th>ID</th><td>@Model.DonDatHangId</td></tr>
    <tr><th>Khách Hàng</th><td>@Model.KhachHang.HoTen</td></tr>
    <tr><th>Ngày Đặt</th><td>@Model.NgayDat.ToString("dd/MM/yyyy")</td></tr>
    <tr><th>Tổng Tiền</th><td>@Model.TongTien.ToString("N0") VND</td></tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DonDatHangId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
