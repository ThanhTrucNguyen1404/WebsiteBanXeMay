@model WebsiteBanXeMay___Coding.Models.DonDatHang

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
}

<h2>Chi Tiết Đơn Hàng</h2>

<table class="table">
    <tr><th>ID</th><td>@Model.DonDatHangId</td></tr>
    <tr><th>Khách Hàng</th><td>@Model.KhachHang.HoTen</td></tr>
    <tr><th>Ngày Đặt</th><td>@Model.NgayDat.ToString("dd/MM/yyyy")</td></tr>
    <tr><th>Tổng Tiền</th><td>@Model.TongTien.ToString("N0") VND</td></tr>
    <tr><th>Trạng Thái</th><td>@Model.TrangThai</td></tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
