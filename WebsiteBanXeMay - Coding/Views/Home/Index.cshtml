@model IEnumerable<WebsiteBanXeMay___Coding.Models.GioHangItem>

@{
    ViewData["Title"] = "Giỏ Hàng";
    decimal totalPrice = Model?.Sum(item => item.ThanhTien) ?? 0; // Tính tổng tiền giỏ hàng
}

<div class="container py-5">
    <h2 class="text-center mb-5">Giỏ hàng của bạn</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            Giỏ hàng của bạn trống. <a href="@Url.Action("Index", "SanPham")">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <!-- Bảng giỏ hàng -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng cộng</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" alt="Ảnh sản phẩm" style="width: 80px; height: 80px;" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("N0", new System.Globalization.CultureInfo("vi-VN")) VND</td>
                        <td>
                            <!-- Form để cập nhật số lượng -->
                            <form asp-action="UpdateQuantity" method="post">
                                <input type="hidden" name="id" value="@item.ProductId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control text-center" style="width: 70px;" />
                                <button type="submit" class="btn btn-primary btn-sm mt-2">Cập nhật</button>
                            </form>
                        </td>
                        <td>@(item.ThanhTien.ToString("N0", new System.Globalization.CultureInfo("vi-VN"))) VND</td>
                        <td>
                            <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.ProductId })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Tổng tiền giỏ hàng -->
        <div class="text-right">
            <h4>Tổng tiền: <span class="text-danger fw-bold">@totalPrice.ToString("N0", new System.Globalization.CultureInfo("vi-VN")) VND</span></h4>
        </div>

        <!-- Thanh toán -->
        <div class="text-right mt-3">
            <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">Thanh toán</a>
        </div>
    }
</div>
