@model IEnumerable<WebsiteBanXeMay___Coding.Models.SanPham>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}

<h2 class="text-center mt-3">Danh Sách Sản Phẩm</h2>

<div class="container mt-4">
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model.Where(p => p.SoLuongTonKho > 0)) // Ẩn sản phẩm hết hàng
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "/Images/default-product.png" : item.HinhAnh)"
                             class="card-img-top img-fluid"
                             alt="@item.TenSanPham"
                             style="height: 250px; object-fit: cover;">

                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@item.TenSanPham</h5>
                            <p class="text-muted mb-1">Giá: <span class="fw-semibold text-danger">@item.GiaBan.ToString("#,##0") VND</span></p>
                            <p class="text-success">Còn lại: <strong>@item.SoLuongTonKho</strong> sản phẩm</p>

                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-flex flex-column align-items-center">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <div class="input-group mb-2" style="max-width: 150px;">
                                    <input type="number" name="quantity" class="form-control text-center" value="1" min="1" max="@item.SoLuongTonKho" required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 fw-semibold">
                                    <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ hàng
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Không có sản phẩm nào để hiển thị.
        </div>
    }
</div>
