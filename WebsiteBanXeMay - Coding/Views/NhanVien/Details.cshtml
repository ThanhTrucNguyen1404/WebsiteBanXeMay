@model WebsiteBanXeMay___Coding.Models.NhanVien

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<h2 class="text-primary text-center">@ViewData["Title"]</h2>

<div class="card p-4 shadow-sm">
    <h4 class="text-info">📌 Thông tin nhân viên</h4>
    <hr />

    <p><strong>🆔 ID:</strong> @Model.Id</p>
    <p><strong>👤 Họ Tên:</strong> @Model.HoTen</p>
    <p><strong>🏢 Chức Vụ:</strong> @Model.ChucVu</p>
    <p><strong>📧 Email:</strong> @(Model.User?.Email ?? "N/A")</p>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Sửa</a>
    </div>
</div>
