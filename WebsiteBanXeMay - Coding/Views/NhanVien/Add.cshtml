@model WebsiteBanXeMay___Coding.Models.NhanVien

<h2>Thêm nhân viên</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="HoTen">Họ Tên</label>
        <input asp-for="HoTen" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ChucVu">Chức Vụ</label>
        <select asp-for="ChucVu" asp-items="ViewBag.ChucVus" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Tài khoản liên kết</label>
        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control">
            <option value="">-- Chọn tài khoản --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
