@model IEnumerable<WebsiteBanXeMay___Coding.Models.NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Add" class="btn btn-success mb-3">➕ Thêm Nhân Viên</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ Tên</th>
            <th>Chức Vụ</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.HoTen</td>
                <td>@item.ChucVu</td>
                <td>@(item.User?.Email ?? "Chưa liên kết")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">✏️ Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">ℹ️ Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">🗑 Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
