@model WebsiteBanXeMay___Coding.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chi tiết loại sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Tên loại</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
