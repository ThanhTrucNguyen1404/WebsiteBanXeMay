@model WebsiteBanXeMay___Coding.Models.NhanVien

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<h2 class="text-primary text-center">@ViewData["Title"]</h2>

<div class="card p-4 shadow-sm">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="HoTen" class="font-weight-bold">👤 Họ Tên</label>
            <input asp-for="HoTen" class="form-control" />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChucVu" class="font-weight-bold">🏢 Chức Vụ</label>
            <select asp-for="ChucVu" asp-items="ViewBag.ChucVus" class="form-control">
                <option value="">-- Chọn chức vụ --</option>
            </select>
            <span asp-validation-for="ChucVu" class="text-danger"></span>
        </div>

        <!-- Hiển thị Email nhưng không cho chỉnh sửa -->
        <div class="form-group">
            <label class="font-weight-bold">📧 Email</label>
            <input type="text" class="form-control" value="@Model.User?.Email" readonly />
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-secondary">⬅️ Hủy</a>
            <button type="submit" class="btn btn-primary">💾 Lưu</button>
        </div>
    </form>
</div>
