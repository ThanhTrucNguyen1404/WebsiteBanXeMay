@model WebsiteBanXeMay___Coding.Models.LoaiSanPham

@{
    ViewData["Title"] = "Xóa loại sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn có chắc chắn muốn xóa loại sản phẩm này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Tên loại</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
